{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "details": { "type": "string" },
          "completed": { "type": "boolean" },
          "user": { "type": "string" }, 
          "created": { "type": "string", "format": "date-time" }
        },
        "required": ["title", "completed", "user", "created"]
      }
    }
  }
}
